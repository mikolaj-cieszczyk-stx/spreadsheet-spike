---
import { Button, Link } from '@nextui-org/react'
import Nav from '../components/Nav'

interface Props {
  title: string
}

const { title } = Astro.props

const pages = [
  {
    title: 'react-grid',
    url: '/react-grid',
  },
  {
    title: 'react-data-grid',
    url: '/react-data-grid',
  },
  { title: 'react-spreadsheet', url: '/react-spreadsheet' },
  { title: 'react-datasheet-grid', url: '/react-datasheet-grid' },
  { title: 'AG Grid', url: '/ag-grid' },
]
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav style={{ display: 'grid', gridTemplateColumns: '2 1fr' }}>
      <Nav items={pages} />
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: white;
  }
  main {
    padding: 1rem;
  }

  .links-section,
  .impression-section,
  .requirements-section,
  .component-render-section {
    margin-bottom: 20px;
  }
</style>
